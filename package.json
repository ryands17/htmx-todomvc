{
  "name": "htmx-todomvc",
  "description": "A TodoMVC (again) using HTMX and Hyperscript with an express backend",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "lint": "tsc --noEmit && xss-scan",
    "build": "esbuild src/index.tsx --bundle --platform=node --packages=external --minify --sourcemap --outfile=dist/index.js --format=esm",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@kitajs/html": "^3.0.7",
    "@kitajs/ts-html-plugin": "^1.3.0",
    "clsx": "^2.0.0",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.19.5",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "prettier": {
    "singleQuote": true
  }
}
